{% extends 'base.html.twig' %}

{% block title %}Welcome Back!{% endblock %}

{% block stylesheets %}
<style>
    /* Global styles */
    body {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        font-family: 'Arial', sans-serif;
        color: #fff;
    }

    /* Centering the login form */
    .main-content {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        background: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        padding: 2rem;
        width: 100%;
        max-width: 400px;
        text-align: center;
        color: #333;
    }

    .login-container h1 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        color: #2575fc;
    }

    .login-container label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: bold;
        text-align: left;
    }

    .login-container input {
        width: 100%;
        padding: 0.8rem;
        margin-bottom: 1.2rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
    }

    .login-container input:focus {
        border-color: #2575fc;
        outline: none;
        box-shadow: 0 0 4px rgba(37, 117, 252, 0.5);
    }

    .login-container button {
        background-color: #2575fc;
        color: #fff;
        padding: 0.8rem 1.5rem;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 100%;
    }

    .login-container button:hover {
        background-color: #1a5cbc;
    }

    .login-container a {
        color: #2575fc;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .login-container a:hover {
        text-decoration: underline;
    }

    .alert {
        margin-bottom: 1.5rem;
        padding: 1rem;
        border: 1px solid transparent;
        border-radius: 5px;
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

    .logo {
        margin-bottom: 1.5rem;
    }

    .logo img {
        max-width: 100px;
    }

    /* Footer styling */
    

    
</style>
{% endblock %}


    <body>
        <!-- Header -->
        <header class="fixed-top header">
            <!-- Top Header -->
            <div class="top-header py-2 bg-white">
                <div class="container">
                    <div class="row no-gutters">
                        <div class="col-lg-4 text-center text-lg-left">
                            <a class="text-color mr-3" href="callto:+21671111222"><strong>CALL</strong> +216 71 111 222</a>
                            <ul class="list-inline d-inline">
                                <li class="list-inline-item"><a class="d-inline-block p-2 text-color" href="#"><i class="ti-facebook"></i></a></li>
                                <li class="list-inline-item"><a class="d-inline-block p-2 text-color" href="#"><i class="ti-twitter-alt"></i></a></li>
                                <li class="list-inline-item"><a class="d-inline-block p-2 text-color" href="#"><i class="ti-linkedin"></i></a></li>
                                <li class="list-inline-item"><a class="d-inline-block p-2 text-color" href="#"><i class="ti-instagram"></i></a></li>
                            </ul>
                        </div>
                        <div class="col-lg-8 text-center text-lg-right">
                            <ul class="list-inline">
                                <li class="list-inline-item"><a class="text-uppercase text-color p-sm-2 py-2 px-0" href="#" data-toggle="modal" data-target="#loginModal">Login</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Navigation -->
            <div class="navigation w-100">
                <div class="container">
                    <nav class="navbar navbar-expand-lg navbar-light p-0">
                        <a class="navbar-brand" href="{{ path('app_home') }}"><img src="{{ asset('images/logo.png') }}" alt="logo"></a>
                        <button class="navbar-toggler rounded-0" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navigation">
                            <ul class="navbar-nav ml-auto text-center">
                                <li class="nav-item"><a href="{{ path('app_home') }}" class="nav-link">Home</a></li>
                                <li class="nav-item"><a href="{{ path('page_about') }}" class="nav-link">About</a></li>
                                <li class="nav-item"><a href="{{ path('front_cours_index') }}" class="nav-link">Courses</a></li>
                                <li class="nav-item"><a href="{{ path('front_chapitre_index') }}" class="nav-link">Chapters</a></li>
                                <li class="nav-item"><a href="{{ path('app_message_index') }}" class="nav-link">Messages</a></li>
                                <li class="nav-item"><a href="{{ path('app_evenement_index') }}" class="nav-link">Events</a></li>
                                <li class="nav-item"><a href="{{ path('page_contact') }}" class="nav-link">Contact</a></li>
                                <li class="nav-item"><a href="{{ path('app_utilisateur_new') }}" class="nav-link">Register</a></li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <!-- Main Content -->
        {% block body %}{% endblock %}

        <!-- Footer -->
        <footer>
            <div class="footer bg-footer section border-bottom">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4 col-sm-8 mb-5">
                            <a class="logo-footer" href="{{ path('app_home') }}"><img class="img-fluid mb-4" src="{{ asset('images/logo.png') }}" alt="logo"></a>
                            <ul class="list-unstyled">
                                <li class="mb-2">+1 (2) 345 6789</li>
                                <li class="mb-2">contact@yourdomain.com</li>
                            </ul>
                        </div>
                        <!-- Links -->
                        <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-5">
                            <h4 class="text-white mb-5">Links</h4>
                            <ul class="list-unstyled">
                                <li class="mb-3"><a class="text-color" href="{{ path('front_cours_index') }}">Courses</a></li>
                                <li class="mb-3"><a class="text-color" href="{{ path('app_evenement_index') }}">Events</a></li>
                                <li class="mb-3"><a class="text-color" href="{{ path('page_contact') }}">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        <!-- Scripts -->
        <script src="{{ asset('plugins/jQuery/jquery.min.js') }}"></script>
        <script src="{{ asset('plugins/bootstrap/bootstrap.min.js') }}"></script>
        <script src="{{ asset('plugins/slick/slick.min.js') }}"></script>
        <script src="{{ asset('plugins/aos/aos.js') }}"></script>
        <script src="{{ asset('js/script.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>

{# templates/front/cours/paiement.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paiement du Cours - {{ cours.titreCours }}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center text-primary">Acheter le cours : {{ cours.titreCours }}</h1>

        <!-- Affichage des messages flash -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">Détails du cours</h4>
                        <p><strong>Description :</strong> {{ cours.descriptionCours }}</p>
                        <p><strong>Prix :</strong> {{ cours.prix }} €</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <h3>Informations de paiement</h3>
                <!-- Formulaire de paiement simulé -->
                <form id="payment-form" method="POST">
                    <div class="form-group">
                        <label for="cardNumber">Numéro de carte :</label>
                        <input type="text" name="cardNumber" id="cardNumber" class="form-control" placeholder="XXXX XXXX XXXX XXXX" required>
                    </div>
                    <div class="form-group">
                        <label for="expiryDate">Date d'expiration :</label>
                        <input type="text" name="expiryDate" id="expiryDate" class="form-control" placeholder="MM/AA" required>
                    </div>
                    <div class="form-group">
                        <label for="cvv">CVV :</label>
                        <input type="text" name="cvv" id="cvv" class="form-control" placeholder="XXX" required>
                    </div>
                    <button type="submit" class="btn btn-success btn-block">Procéder au paiement</button>
                </form>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a href="{{ path('front_cours_index') }}" class="btn btn-primary">Retour à la liste des cours</a>
        </div>
    </div>
</body>
</html>

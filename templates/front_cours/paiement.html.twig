{# templates/front/cours/paiement.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paiement du Cours - {{ cours.titreCours }}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center text-primary">Détails du paiement</h1>

        <div class="alert alert-info text-center">
            Ce cours coûte <strong>{{ cours.prix }} €</strong>. Cliquez sur "Acheter maintenant" pour finaliser votre paiement.
        </div>

        <div class="text-center">
            <a href="{{ path('front_cours_acheter', {id: cours.id}) }}" class="btn btn-success btn-lg">
                Acheter maintenant
            </a>
        </div>

        <div class="mt-4 text-center">
            <a href="{{ path('front_cours_index') }}" class="btn btn-primary">Retour à la liste des cours</a>
        </div>
    </div>
</body>
</html>

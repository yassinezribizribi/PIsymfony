{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau cours{% endblock %}

{% block body %}

<br><br><br><br><br><br>
<div class="container mt-5">
    <h1>Ajouter un nouveau cours</h1>

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.titreCours) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.descriptionCours) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.dateDebut) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.dateFin) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.image) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.typeContenu) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.contenu) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.prix) }}  <!-- Ajouter le champ prix ici -->
            </div>
        </div>

        <div class="text-center mt-3">
            <button class="btn btn-primary">Ajouter</button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}

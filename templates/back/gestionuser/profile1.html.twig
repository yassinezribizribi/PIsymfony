{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord Enseignant{% endblock %}

{% block body %}

<br><br><br><br><br><br><br><br><br><br>
<div class="container mt-4">
    <!-- Titre principal -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Bienvenue, {{ app.user.nom }}</h1>
        <a href="{{ path('app_home') }}" class="btn btn-danger">Se déconnecter</a>
    </div>

    <!-- Informations principales -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Cours Total</h5>
                    <p class="card-text text-primary display-4">{{ courses|length }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Étudiants Inscrits</h5>
                    <p class="card-text text-success display-4">{{ students|length }}</p>
                </div>
            </div>
        </div>
        
    </div>

    <!-- Bouton Ajouter Cours -->
    <div class="mb-4">
        <a href="{{ path('app_cours_new') }}" class="btn btn-success">Ajouter Cours</a>
    </div>

    <!-- Liste des cours -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Vos Cours</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Nom du Cours</th>
                        <th>Date de Création</th>
                        
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for course in courses %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ course.titreCours }}</td>
                            <td>{{ course.dateDebut|date('d-m-Y') }}</td>
                             <td>
                                <a href="{{ path('app_cours_edit', { id: course.id }) }}" class="btn btn-sm btn-primary">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">Aucun cours disponible.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>
{% endblock %}

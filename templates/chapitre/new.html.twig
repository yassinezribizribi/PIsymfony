{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau Chapitre{% endblock %}

{% block body %}
<br><br><br><br><br><br>
<!-- En-tête -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center mb-4">
            <h1 class="display-4 text-primary font-weight-bold">Créer un Nouveau Chapitre</h1>
            <p class="lead text-muted">Ajoutez les détails de votre chapitre pour enrichir votre cours.</p>
        </div>
    </div>

    <!-- Formulaire -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0 rounded-lg">
                <div class="card-body p-4">
                    {{ include('chapitre/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

    <!-- Bouton retour -->
    <div class="row justify-content-center mt-4">
        <div class="col-lg-8 text-center">
            <a href="{{ path('app_chapitre_index') }}" class="btn btn-secondary rounded-pill">
                <i class="fas fa-arrow-left"></i> Retour à la liste des chapitres
            </a>
        </div>
    </div>
</div>
{% endblock %}

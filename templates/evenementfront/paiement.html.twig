{# templates/front/evenement/paiement.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paiement de l'Événement - {{ evenement.titreEven }}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center text-primary">Détails du paiement</h1>

        <div class="alert alert-info text-center">
            Cet événement coûte <strong>{{ evenement.prixevenement }} TND</strong>. Cliquez sur "Acheter maintenant" pour finaliser votre paiement.
        </div>

        <div class="text-center mb-4">
            <img src="{{ asset('uploads/images/' ~ evenement.imageevenement) }}" alt="Image de l'événement" class="img-fluid w-50 rounded mb-3">
        </div>

        <div class="text-center">
            <a href="{{ path('front_evenement_acheter', {id: evenement.id}) }}" class="btn btn-success btn-lg">
                Acheter maintenant
            </a>
        </div>

        <div class="mt-4 text-center">
            <a href="{{ path('page_events') }}" class="btn btn-primary">Retour à la liste des événements</a>
        </div>
    </div>
</body>
</html>
